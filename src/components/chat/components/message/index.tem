<div class="chat__message message" {{hasMedia}} date = {{date}}>
  <div class="message__container">
    {{ this?.file ? <image class="message__image" src="{{file.path}}" /> : null }}
    {{ this?.content? <p class="message__content">{{content}}</p> : null}}
  </div>
  <div class = "message__time"><MessageTime time="{{date}}"/></div>
</div>
